                android:textSize="8sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/r3c3"
                style="@style/Base.Widget.MaterialComponents.TextInputEditText"
                android:layout_width="50dp"
                android:layout_height="58dp"
                android:layout_column="3"
                android:gravity="center"
                android:inputType="text"
                android:text=""
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/colorAccent"
                android:textSize="8sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/r3c4"
                style="@style/Base.Widget.MaterialComponents.TextInputEditText"
                android:layout_width="50dp"
                android:layout_height="58dp"
                android:layout_column="4"
                android:gravity="center"
                android:inputType="text"
                android:text=""
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/colorAccent"
                android:textSize="8sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/r3c5"
                style="@style/Base.Widget.MaterialComponents.TextInputEditText"
                android:layout_width="50dp"
                android:layout_height="58dp"
                android:layout_column="5"
                android:gravity="center"
                android:inputType="text"
                android:text=""
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/colorAccent"
                android:textSize="8sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/r3c6"
                style="@style/Base.Widget.MaterialComponents.TextInputEditText"
                android:layout_width="50dp"
                android:layout_height="58dp"
                android:layout_column="6"
                android:gravity="center"
                android:inputType="text"
                android:text=""
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/colorAccent"
                android:textSize="8sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/r3c7"
                style="@style/Base.Widget.MaterialComponents.TextInputEditText"
                android:layout_width="50dp"
                android:layout_height="58dp"
                android:layout_column="7"
                android:gravity="center"
                android:inputType="text"
                android:text=""
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/colorAccent"
                android:textSize="8sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/r3c8"
                style="@style/Base.Widget.MaterialComponents.TextInputEditText"
                android:layout_width="50dp"
                android:layout_height="58dp"
                android:layout_column="8"
                android:gravity="center"
                android:inputType="text"
                android:text=""
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/colorAccent"
                android:textSize="8sp"
                android:textStyle="bold" />

        </TableRow>

    </TableLayout>

    <CalendarView
        android:id="@+id/calendarView"
        style="@android:style/Widget.DeviceDefault.CalendarView"
        android:layout_width="364dp"
        android:layout_height="306dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:background="@color/colorPrimary"
        android:focusedMonthDateColor="@color/colorAccent"
        android:selectedWeekBackgroundColor="@color/colorPrimaryDark"
        android:theme="@style/AppTheme"
        android:unfocusedMonthDateColor="@color/colorPrimaryDark"
        android:visibility="visible"
        android:weekNumberColor="@color/colorPrimaryDark"
        android:weekSeparatorLineColor="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>