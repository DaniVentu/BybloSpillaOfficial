<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:padding="10dp"
    tools:context=".Page_Events">

    <TextView
        android:id="@+id/textAvvisi"
        android:layout_width="271dp"
        android:layout_height="53dp"
        android:layout_marginStart="70dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="70dp"
        android:layout_marginRight="70dp"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="@string/avvisi"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:id="@+id/retbtn"
        tools:ignore="MissingConstraints"
        android:textColor="@color/colorPrimaryDark"
        android:background="@color/colorPrimary"
        android:textStyle="italic|bold"
        android:text="@string/ret"/>

    <Button
        android:id="@+id/btnShowDialog"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary"
        android:text="@string/add"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"/>

    <TextView
        android:id="@+id/editText1"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textAvvisi"
        android:drawableStart="@drawable/icona_puntina"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:hint="@string/nex_alert"
        android:gravity="center"
        android:drawableLeft="@drawable/icona_puntina" />
    <TextView
        android:id="@+id/editText2"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@+id/editText1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint="@string/nex_alert"
        android:gravity="center"
        android:drawableStart="@drawable/icona_puntina"
        android:drawableLeft="@drawable/icona_puntina"/>
    <TextView
        android:id="@+id/editText3"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@+id/editText2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint="@string/nex_alert"
        android:gravity="center"
        android:drawableStart="@drawable/icona_puntina"
        android:drawableLeft="@drawable/icona_puntina"/>
    <TextView
        android:id="@+id/editText4"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@+id/editText3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint="@string/nex_alert"
        android:gravity="center"
        android:drawableStart="@drawable/icona_puntina"
        android:drawableLeft="@drawable/icona_puntina"/>
    <TextView
        android:id="@+id/editText5"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@+id/editText4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint="@string/nex_alert"
        android:gravity="center"
        android:drawableStart="@drawable/icona_puntina"
        android:drawableLeft="@drawable/icona_puntina"/>
    <TextView
        android:id="@+id/editText6"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@+id/editText5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint="@string/nex_alert"
        android:gravity="center"
        android:drawableStart="@drawable/icona_puntina"
        android:drawableLeft="@drawable/icona_puntina"/>


</RelativeLayout>