<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/sfondosfumato"
    android:padding="5dp"
    tools:context=".Page_Events">

    <TextView
        android:id="@+id/textAvvisi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="19dp"
        android:fontFamily="@font/title_pro"
        android:text="@string/notes"
        android:layout_toRightOf="@id/retbtn"
        android:textColor="@color/colorWhite"
        android:textSize="25sp"
        tools:targetApi="jelly_bean"
        android:layout_toEndOf="@id/retbtn"
        tools:ignore="RelativeOverlap" />

    <Button
        android:id="@+id/retbtn"
        style="?borderlessButtonStyle"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:drawableTop="@drawable/icona_back"
        android:drawableTint="@color/colorWhite"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        tools:targetApi="m"/>

    <Button
        android:id="@+id/btnShowDialog"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:drawableTop="@drawable/icona_plus"
        android:drawableTint="@color/colorWhite"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        tools:targetApi="m"/>
    <TextView
        android:id="@+id/editText1"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textAvvisi"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:drawableStart="@drawable/icona_puntina"
        android:drawableLeft="@drawable/icona_puntina"
        android:fontFamily="@font/body"
        android:gravity="center"
        android:hint="@string/nex_alert"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorFade"
        tools:targetApi="jelly_bean" />

    <TextView
        android:id="@+id/editText2"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@+id/editText1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:drawableStart="@drawable/icona_puntina"
        android:drawableLeft="@drawable/icona_puntina"
        android:fontFamily="@font/body"
        android:gravity="center"
        android:hint="@string/nex_alert"
        android:text=""
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorFade"
        tools:targetApi="jelly_bean" />
    <TextView
        android:id="@+id/editText3"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@+id/editText2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:drawableStart="@drawable/icona_puntina"
        android:drawableLeft="@drawable/icona_puntina"
        android:fontFamily="@font/body"
        android:gravity="center"
        android:hint="@string/nex_alert"
        android:text=""
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorFade"
        tools:targetApi="jelly_bean" />

    <TextView
        android:id="@+id/editText4"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@+id/editText3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:drawableStart="@drawable/icona_puntina"
        android:drawableLeft="@drawable/icona_puntina"
        android:fontFamily="@font/body"
        android:gravity="center"
        android:hint="@string/nex_alert"
        android:text=""
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorFade"
        tools:targetApi="jelly_bean" />

    <TextView
        android:id="@+id/editText5"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/editText4"
        android:drawableStart="@drawable/icona_puntina"
        android:drawableLeft="@drawable/icona_puntina"
        android:fontFamily="@font/body"
        android:gravity="center"
        android:hint="@string/nex_alert"
        android:text=""
        android:textColorHint="@color/colorFade"
        tools:targetApi="jelly_bean" />



</RelativeLayout>