<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    android:padding="10dp"
    tools:context=".Page1">

    <Button
        android:id="@+id/btn_timetable"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView3"
        android:layout_marginTop="-90dp"
        android:background="@drawable/sfondosfumato"
        android:text="@string/Timetab"
        android:textColor="@color/colorPrimary" />

    <Button
        android:id="@+id/btn_events"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/sfondosfumato"
        android:text="@string/avvisi"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/btn_timetable"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_timetable" />

    <Button
        android:id="@+id/btn_rooms"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/sfondosfumato"
        android:text="@string/rooms"
        android:textColor="@color/colorPrimary"
        android:layout_below="@id/btn_events"
        android:layout_centerHorizontal="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_events" />

    <Button
        android:id="@+id/btn_settings"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:background="@drawable/sfondosfumato"
        android:text="@string/who"
        android:layout_marginTop="5dp"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/btn_rooms"/>
    <Button
        android:id="@+id/btn_where"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:background="@drawable/sfondosfumato"
        android:text="@string/where"
        android:layout_marginTop="5dp"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/btn_settings"/>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="323dp"
        android:layout_height="275dp"
        android:layout_marginBottom="68dp"
        android:contentDescription="@android:string/ok"
        android:layout_centerHorizontal="true"
        app:layout_constraintBottom_toTopOf="@+id/btn_events"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/logo_aula_studio" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="41dp"
        android:layout_height="33dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="13dp"
        android:contentDescription="@android:string/ok"
        app:srcCompat="@drawable/logo_instagram" />

    <TextView
        android:id="@+id/ig"
        android:layout_width="124dp"
        android:layout_height="25dp"
        android:clickable="false"
        android:text="@string/instagram"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorAccent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="18dp"/>

    <Button
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:id="@+id/retbtn"
        tools:ignore="MissingConstraints"
        android:textColor="@color/colorPrimaryDark"
        android:background="@color/colorPrimary"
        android:textStyle="italic|bold"
        android:text="@string/ret"/>


</RelativeLayout>